
@{
    ViewData["Title"] = "Details";
}

@model MaestroDetalle.Models.Tareas

<div class="container mt-4">

<h2>Detalles de la tarea</h2>
<div class="row">
    <div class="col-md-6">
        <h4>Nombre:@Model.Nombre </h4>
    </div>
</div>

<table class="table table-bordered mt-4">
    <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var detalle in Model.Detalles)
            {
                <tr>
                    <td>@detalle.FechaInicio</td>
                    <td>@detalle.FechaFin</td>
                    <td>
                        <a asp-action="EditDetalle" asp-route-id="detalle.SubTareasDetalleId" class="btn btn-primary">Editar</a>
                        <a asp-action="DeleteDetalle" asp-route-id="detalle.SubTareasDetalleId" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
    </tbody>
</table>
<a asp-action="Index" class="btn btn-secondary">Volver</a>

</div>