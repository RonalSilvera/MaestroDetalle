
@{
    ViewData["Title"] = "Edit";
}

@model MaestroDetalle.Models.Tareas

<div class="container mt-4">
    <h2>Editar Tarea</h2>
    <form asp-action="Edit">
        <input type="hidden" asp-for="TareaId" />

        <div class="form-group">
            <label asp-for="Nombre">Nombre</label>
            <input asp-for="Nombre" class="form-control" type="text" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descripcion">Descripcion</label>
            <input asp-for="Descripcion" class="form-control" type="text" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
      
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>

    </form>

</div>
