
@{
    ViewData["Title"] = "Create";
}

@model MaestroDetalle.Models.Tareas

<div class="form-container">
<h2>Crear Tarea</h2>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" type="text">Nombre/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion">Descripcion</label>
        <input asp-for="Descripcion" class="form-control" type="text">Descripcion/>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <h3>Detalles</h3>

    <div class="form-group">
        <label>Fecha de Inicio de Subtarea</label>
        <input type="datetime-local" asp-for="Detalles[0].FechaInicio" class="form-control" />
        <span asp-validation-for="Detalles[0].FechaInicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Fecha de Fin de Subtarea</label>
        <input type="datetime-local" asp-for="Detalles[0].FechaFin" class="form-control" />
        <span asp-validation-for="Detalles[0].FechaFin" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Crear Tarea</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>

</form>


























</div>
