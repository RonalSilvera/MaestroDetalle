@model MaestroDetalle.Models.SubTareasDetalle

<h2>Eliminar detalles de la tarea</h2>
<div>
    <h4>Detalle de tareas</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">Tarea detalle ID</dt>
        <dd class="col-sm-10">@Model.SubTareasDetalleId</dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">Fecha de inicio</dt>
        <dd class="col-sm-10">@Model.FechaInicio</dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">Fecha de fin</dt>
        <dd class="col-sm-10">@Model.FechaFin</dd>
    </dl>

    <form asp-action="DeleteDetalle" asp-route-id="@Model.SubTareasDetalleId" method="post">
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Details" asp-route-id="@Model.TareaId" class="btn btn-secondary"> Volver </a>
        </div>
    </form>    
    
    
</div>